{% include '_templates/header.twig' %}

<style>
    .carousel {
        height: 70vh;
        overflow: hidden;
    }

    @media (max-width: 768px) {
        .carousel {
            height: 30vh;
        }
    }

    .carousel-item img {
        max-width: 100%;
        max-height: 100%;
        width: auto;
        height: auto;
        margin: auto;
        display: block;
        position: relative;
    }

    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .col-md-3 {
        margin-top: 15px;
        margin-right: 10px;
    }
</style>
<br>
<div class="container col-md-8 col-sm-12">
    <br>
    <br>
    <h1 align="center">Migliori fotografie</h1>
    {% if best3 %}
        <div id="homeCarouselIndicators" class="carousel slide shadow p-3 mb-5 bg-white rounded" data-bs-ride="carousel">
            <div class="carousel-indicators">
                {% for i in range(0, best3|length-1) %}
                    {% if i == 0 %}
                        <button type="button" data-bs-target="#homeCarouselIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    {% else %}
                        <button type="button" data-bs-target="#homeCarouselIndicators" data-bs-slide-to="{{ i }}" aria-label="Slide {{ i+1 }}"></button>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="carousel-inner">
                {% for i in range(0, best3|length-1) %}
                    {% if i == 0 %}
                        <div class="carousel-item active">
                            <img src="{{ URL }}{{ best3[i][0].path }}" class="d-block w-100" alt="">
                        </div>
                    {% else %}
                        <div class="carousel-item">
                            <img src="{{ URL }}{{ best3[i][0].path }}" class="d-block w-100" alt="">
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#homeCarouselIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#homeCarouselIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    {% else %}
        <p align="center">Non sono disponibili fotografie al momento!</p>
    {% endif %}
</div>
<br>
<br>
<br>
<br>
<h1 class="title" id="catalogo" align="center">Catalogo fotografico</h1>
<br>
<div class="row col-md-5 col-sm-12 mx-auto">
    <div class="input-group mb-3">
        <span class="input-group-text"><i class="fas fa-search"></i></span>
        <input type="text" id="searchInput" class="form-control" placeholder="Cerca...">
        <button class="btn btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#filterModal"><i class="fas fa-filter"></i> Filtri</button>
    </div>
</div>

<!-- Filter Modal -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filterModalLabel">Seleziona filtri</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="filterForm">
                    <div class="form-check">
                        <input class="form-check-input" checked type="checkbox" name="fields[]" value="data_ora">
                        <label class="form-check-label">Data e ora</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" checked type="checkbox" name="fields[]" value="luogo">
                        <label class="form-check-label">Luogo</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" checked type="checkbox" name="fields[]" value="soggetto">
                        <label class="form-check-label">Soggetto</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" checked type="checkbox" name="fields[]" value="tipologia">
                        <label class="form-check-label">Tipologia (b/n o colori)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" checked type="checkbox" name="fields[]" value="visualizzazioni">
                        <label class="form-check-label">Visualizzazioni</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" checked type="checkbox" name="fields[]" value="nome_fotografo">
                        <label class="form-check-label">Nome fotografo</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" checked type="checkbox" name="fields[]" value="cognome_fotografo" >
                        <label class="form-check-label">Cognome fotografo</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Applica filtri</button>
            </div>
        </div>
    </div>
</div>

{% if fotografie %}
    <div class="container col-md-8 col-sm-12">
        <div class="min-vh-100">
            <div class="row justify-content-center catalogoDiv">
                {% for foto in fotografie %}
                    <div class="card col-md-3 col-sm-12">
                        <a href="{{ URL }}fotografie/dettagli/{{ foto.id }}" class="text-decoration-none">
                            <img class="card-img-top" src="{{ URL }}{{ foto.path }}" alt="Card image cap">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Data: </strong>{{ foto.getDataOra }}</li>
                                <li class="list-group-item"><strong>Luogo: </strong>{{ foto.luogo }}</li>
                            </ul>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% else %}
    <p align="center">Non sono disponibili fotografie al momento!</p>
{% endif %}

<script src="{{ URL }}public/js/search.js"></script>
<br>
