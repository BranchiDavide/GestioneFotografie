<h1 class="title" align="center">Catalogo fotografico</h1>
<br>
<div class="container col-md-8 col-sm-12">
    <div class="row">
        {% for foto in fotografie %}
                <div class="card col-md-4 col-sm-12">
                    <a href="{{ URL }}fotografie/dettagli/{{ foto.id }}" class="text-decoration-none">
                        <img class="card-img-top" src="{{ URL }}{{ foto.getPath }}" alt="Card image cap">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Data: </strong>{{ foto.getDataOra }}</li>
                            <li class="list-group-item"><strong>Luogo: </strong>{{ foto.getLuogo }}</li>
                        </ul>
                    </a>
                </div>
        {% endfor %}
    </div>
</div>
